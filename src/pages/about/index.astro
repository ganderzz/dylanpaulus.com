---
import { Image, Picture } from "@astrojs/image/components";
import SubHeading from "@components/SubHeading.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="About | Dylan Paulus" description="About me">
  <section
    id="main-content"
    tab-index="-1"
    class="max-w-screen-sm md:max-w-screen-md lg:max-w-screen-lg xl:max-w-screen-xl mx-auto mt-8"
  >
    <div class="flex flex-col gap-4 leading-loose">
      <div class="flex flex-col md:flex-row w-full">
        <div class="text-center w-full md:w-1/2">
          <Picture
            src="/images/about-image.jpg"
            widths={[200, 400, 800]}
            aspectRatio="4:3"
            sizes="(max-width: 800px) 100vw, 800px"
            alt="Image of Dylan playing drums"
            class="shadow rounded-md m-auto w-full aspect-auto"
          />

          <figcaption class="text-sm mt-2">That's me, the one in the middle!</figcaption>
        </div>

        <section class="w-full md:w-1/2 mt-8 md:mt-0 ml-0 md:ml-12">
          <SubHeading class="hidden md:block" style={{ marginTop: 0 }}>About</SubHeading>
          <em
            class="text-3xl bg-clip-text text-transparent bg-gradient-to-tr from-blue-500 to-purple-800 dark:from-blue-100 dark:to-orange-300 font-bold"
          >
            Hi, I'm Dylan.
          </em>

          <p class="text-base">
            I'm a Senior Software Engineer at <a href="https://rover.com">Rover.com</a>

            <strong class="block font-bold mt-4">Previous:</strong>
            <ul>
              <li>
                Engineering Manager II @ <a href="https://selinc.com/">Schweitzer Engineering Laboratories</a>
              </li>
              <li>
                <a href="https://www.mobygames.com/developer/sheet/view/developerId,783203/">
                  Web developer @ Sony PlayStation
                </a>
              </li>
              <li>Student web developer @ <a href="https://www.ewu.edu/">Eastern Washington University</a></li>
            </ul>
          </p>

          <p class="text-base mt-6">
            I play drums in a emo/math rock band, <a href="https://griffeymusic.bandcamp.com/">Griffey</a>.
          </p>

          <div class="w-full mt-12">
            <SubHeading>Talks</SubHeading>
            <ul class="list-disc list-inside ml-4">
              <li>
                <a target="_blank" href="https://introduction-functional-programming-boise.netlify.com/#/"
                  >Functional Programming Light (Boise Code Camp 2019)</a
                >
              </li>
              <li>Making React Fast (Internal Presentation 2019)</li>
              <li>NPM, Dependencies, and JS Modules (Internal Presentation 2021)</li>
            </ul>
          </div>
        </section>
      </div>
    </div>
  </section>
</BaseLayout>
